{
  "name": "node-red-contrib-pocketbase",
  "version": "1.0.15",
  "description": "PocketBase node for Node-RED",
  "main": "dist/pb-auth.js",
  "keywords": [
    "node-red",
    "pocketbase",
    "auth"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/benoitadam/node-red-contrib-pocketbase.git"
  },
  "homepage": "https://github.com/benoitadam/node-red-contrib-pocketbase",
  "bugs": {
    "url": "https://github.com/benoitadam/node-red-contrib-pocketbase/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "eventsource": "^4.0.0",
    "pocketbase": "^0.26.2",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "npm-run-all --parallel lint:watch build:watch",
    "lint": "tsc --noEmit",
    "lint:watch": "tsc --noEmit --watch",
    "build:watch": "node esbuild.config.js --watch",
    "clean": "rm -rf dist"
  },
  "node-red": {
    "version": ">=2.0.0",
    "examples": "examples",
    "nodes": {
      "pb-auth": "dist/pb-auth.js",
      "pb-list": "dist/pb-list.js",
      "pb-get": "dist/pb-get.js",
      "pb-create": "dist/pb-create.js",
      "pb-update": "dist/pb-update.js",
      "pb-delete": "dist/pb-delete.js",
      "pb-realtime": "dist/pb-realtime.js",
      "pb-download": "dist/pb-download.js"
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/node-red": "^1.3.5",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5"
  }
}
